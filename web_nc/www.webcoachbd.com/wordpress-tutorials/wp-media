  <script>
		  function wchbd_master_share_287(whr){
			u = "wp-media";
			t = document.title;
			if(whr == 1){
				share_url = "http://twitter.com/share?url="+encodeURIComponent(u)+"&text="+encodeURIComponent(t);
			}else if(whr == 2){
				share_url = "http://www.facebook.com/sharer.php?u="+encodeURIComponent(u);
			}else if(whr == 3){
				share_url = "https://plus.google.com/share?url="+encodeURIComponent(u);
			} else {
				share_url = "http://www.linkedin.com/shareArticle?url="+encodeURIComponent(u)+"&title="+encodeURIComponent(t);
			}
			
			window.open(share_url, "sharer","toolbar=0,status=0,left=150,top=100,width=600,height=500");
			
			return false;
		}
		
		
		</script>

	
